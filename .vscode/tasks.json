{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++ Build",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}", // Build active file
        // "${workspaceFolder}/src/**.cpp", // Build all source files
        "${workspaceFolder}/glad/*.c", // Build Glad source

        "-I${workspaceFolder}/glfw-3.4.bin.WIN64/include",
        "-L${workspaceFolder}/glfw-3.4.bin.WIN64/lib-mingw-w64",

        "-I${workspaceFolder}/freeglut/include",
        "-L${workspaceFolder}/freeglut/lib/x64",

        "-o",
        "${workspaceFolder}\\out\\${fileBasenameNoExtension}.exe",

        "-lglfw3",
        "-lfreeglut",
        "-lopengl32",
        "-lglu32",
        "-lgdi32",
        "-luser32",
        "-lshell32",
        "-lkernel32"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by siMobin & ChatGPT."
    }
  ]
}
